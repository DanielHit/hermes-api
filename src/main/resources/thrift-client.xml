<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd"
       default-lazy-init="false">

    <!-- thrift连接池配置 -->
    <bean id="mtThriftPoolConfig"
          class="com.meituan.service.mobile.mtthrift.client.pool.MTThriftPoolConfig">
        <property name="maxActive" value="400"/>
        <property name="maxIdle" value="100"/>
        <property name="minIdle" value="20"/>
        <property name="testOnBorrow" value="false"/>
        <property name="testOnReturn" value="false"/>
    </bean>

    <bean id="userThriftService"
          class="com.meituan.service.mobile.mtthrift.proxy.ThriftClientProxy"
          destroy-method="destroy">
        <!-- 可不配置:默认maxActive=100,maxIdle=20,minIdle=5,maxWait=3000 -->
        <property name="mtThriftPoolConfig" ref="mtThriftPoolConfig"/>
        <!-- service接口名 -->
        <property name="serviceInterface" value="com.meituan.service.mobile.movie.thrift.user.UserService"/>
        <!-- 集群管理模式，默认ZK  -->
        <property name="clusterManager" value="ZK"/>
        <!-- ZK服务器地址 -->
        <property name="zkServers" value="192.168.2.225:2181,192.168.2.225:2182,192.168.2.225:2183"/>
        <!-- 服务ZK路径 -->
        <property name="zkPath" value="${user_service_zkPath}"/>
        <!-- thrift rpc 超时时间（毫秒）默认2000 -->
        <property name="timeout" value="6000"/>
    </bean>

    
</beans>